<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/asRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg4"
    tools:context=".Activites.AdminSignIn">

    <EditText
        android:id="@+id/asEt"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#3C3C3C"
        android:textColorHint="#4C4C4C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/asBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Sign In"
        android:textSize="24sp"
        android:textStyle="bold"
        app:icon="?attr/actionModeCloseDrawable"
        app:layout_constraintEnd_toEndOf="@+id/asEt"
        app:layout_constraintStart_toStartOf="@+id/asEt"
        app:layout_constraintTop_toBottomOf="@+id/asEt" />

    <ImageButton
        android:id="@+id/asEye"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/asEt"
        app:layout_constraintStart_toEndOf="@+id/asEt"
        app:layout_constraintTop_toTopOf="@+id/asEt"
        app:srcCompat="@mipmap/eye"
        app:tint="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>